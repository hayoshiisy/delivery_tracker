                  )}
                  
                  {item.error && (
                    <div style={{ marginTop: '0.5rem', fontSize: '12px', color: '#dc2626' }}>
                      ì˜¤ë¥˜: {item.error}
                    </div>
                  )}
                </div>
              ))}
            </div>
          </>
        )}
      </div>
    </div>
  );
};

export default BatchTracker; 