  const [progress, setProgress] = useState(0);
  const fileInputRef = useRef<HTMLInputElement>(null);

  // íƒë°°ì‚¬ ëª©ë¡ (í…ŒìŠ¤íŠ¸ íƒë°°ì‚¬ í¬í•¨)
  const allCarriers: Carrier[] = [
    {
      id: 'dev.track.dummy',
      name: 'Test Carrier',
      displayName: 'ğŸ§ª í…ŒìŠ¤íŠ¸ íƒë°°ì‚¬',
      isEnabled: true
    },
    ...carriers.filter(carrier => carrier.isEnabled)
  ];

  // CSV íŒŒì‹± í•¨ìˆ˜
  const parseCSV = (csvText: string): BatchTrackingItem[] => {
    const lines = csvText.trim().split('\n');
    const items: BatchTrackingItem[] = [];
    
    // í—¤ë” ë¼ì¸ ê±´ë„ˆë›°ê¸°
    const dataLines = lines.slice(1);
    
    dataLines.forEach((line, index) => {
      const [carrierId, trackingNumber] = line.split(',').map(item => item.trim());
      
      if (carrierId && trackingNumber) {
        const carrier = allCarriers.find(c => c.id === carrierId);
        if (carrier) {
          items.push({
            id: `item-${index}`,
            carrierId,
            carrierName: carrier.displayName || carrier.name,
            trackingNumber,
            status: 'pending'
          });
        }
      }
    });
    
    return items;
  };

  // íŒŒì¼ ì²˜ë¦¬ í•¨ìˆ˜
  const handleFile = (file: File) => {
    if (!file.name.endsWith('.csv')) {
      alert('CSV íŒŒì¼ë§Œ ì—…ë¡œë“œí•  ìˆ˜ ìˆìŠµë‹ˆë‹¤.');
      return;
    }

    const reader = new FileReader();
    reader.onload = (e) => {
      try {
        const csvText = e.target?.result as string;
        const parsedItems = parseCSV(csvText);
        
        if (parsedItems.length === 0) {
          alert('ìœ íš¨í•œ ë°ì´í„°ê°€ ì—†ìŠµë‹ˆë‹¤. CSV í˜•ì‹ì„ í™•ì¸í•´ì£¼ì„¸ìš”.');
          return;
        }
        
        setItems(parsedItems);
      } catch (error) {
        alert('CSV íŒŒì¼ì„ ì½ëŠ” ì¤‘ ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤.');
      }
    };
    reader.readAsText(file);
  };

  // ë“œë˜ê·¸ ì•¤ ë“œë¡­ í•¸ë“¤ëŸ¬
  const handleDragOver = (e: React.DragEvent) => {
    e.preventDefault();
    setIsDragging(true);
  };

  const handleDragLeave = (e: React.DragEvent) => {
    e.preventDefault();
    setIsDragging(false);
  };

  const handleDrop = (e: React.DragEvent) => {
    e.preventDefault();
    setIsDragging(false);
    
    const files = Array.from(e.dataTransfer.files);
    if (files.length > 0) {
      handleFile(files[0]);
    }
  };

  // íŒŒì¼ ì„ íƒ í•¸ë“¤ëŸ¬
  const handleFileSelect = (e: React.ChangeEvent<HTMLInputElement>) => {
